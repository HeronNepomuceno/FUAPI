---
const {cards} = Astro.props;
---

<section>
	<h3 class="title">Title Section</h3>
	<div class="minicard-grid">
		<slot/>
	</div>
</section>

<style lang="styl">
.title
	color var(--blue-darken-4)
	font var(--fontPrimary)
	font-size 22px
	margin 64px 0 48px 0
	text-align center
	text-decoration underline solid var(--green-darken-1) 2px

	@media (min-width: 600px)
		font-size 28px

.minicard-grid
	display grid
	grid-gap 8px
	grid-template-columns repeat(auto-fit, minmax(344px, 1fr))
	padding 0 8px
	
	@media (min-width: 360px)
		padding 0 16px

	@media (min-width: 600px)
		grid-gap 16px
		padding 0 24px

	@media (min-width: 840px)
		padding 0 32px

	@media (min-width: 1080px)
		grid-template-columns repeat(auto-fit, minmax(210px, 1fr))
		padding 0 64px
</style>